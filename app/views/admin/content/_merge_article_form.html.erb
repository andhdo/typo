<% if current_user.admin? %>  
  <div class=''>
    <h4><%= _("Merge Articles") %></h4>
    <div class=''>
      <%= form_tag({:controller => "admin/content", :action => "merge", :id=>params[:id]}, :method => "put") do %>
      	<%= label_tag('merge_with',"Article ID") %>
      	<%= text_field_tag( 'merge_with' ) %>
      	<%= submit_tag( 'Merge', {:id => "merge_submit"} ) %>
      <% end %>
  </div>  
<% end %>
